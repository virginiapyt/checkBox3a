<Window x:Class="checkBox3a.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:checkBox3a"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <CheckBox x:Name="check_master" Content="Zaznacz wszytko" IsThreeState="true" Click="check_master_Click"/>
        <StackPanel Margin="20 5">
            <CheckBox x:Name ="check1" Content="opcja1" IsChecked="True"/>
            <CheckBox x:Name ="check2" Content="opcja2" IsChecked="{x:Null}" IsThreeState="True"/>
            <CheckBox x:Name ="check3" Content="opcja3" IsChecked="{x:Null}" IsThreeState="True"/>
        </StackPanel>
        <Label Content="label"/>
    </StackPanel>
</Window>
